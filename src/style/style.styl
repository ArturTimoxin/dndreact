@import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700,900')
@import '../components/item/style.styl'
@import '../components/target/style.styl'

body
    margin 0
    position relative
    #root
        .App
            overflow hidden
            .wrapper
                width: 100%
                height: 100%
                .itemContainer
                    height: 100%
                    width: 200px
                    border: 3px solid black
                    box-sizing: border-box
                    position: fixed
                    display: flex
                    align-items: center
                    justify-content: center
                .mainWrapper
                    margin-left: 200px
                    width: calc(100% - 199px)
                    header
                        position fixed
                        width: 100%
                        height 50px
                        display: flex
                        justify-content: center 
                        align-items: center
                        background-color: navy
                        border-bottom: 4px solid #429bf4
                        box-sizing: border-box
                        font-family: 'Roboto'
                        color: white
                        font-weight: 800
                        font-style: normal
                        font-stretch: normal
                        letter-spacing: normal
                        text-align: left
                    .targetGrid
                        overflow: auto
                        font-size: 0
                        padding-top: 50px
                        .targetRow
                            white-space:nowrap;