@import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700,900')
@import '../components/item/style.styl'
@import '../components/target/style.styl'

body
    margin 0
    position relative
    overflow hidden
    .App
        .wrapper
            width: 100vw
            height: 100vh
            .itemContainer
                height 100vh
                width 200px
                border: 3px solid black
                position: fixed
                display: flex
                justify-content: center 
                align-items: center
            .mainWrapper
                margin-left: 206px
                height 100vh
                width: calc(100% - 199px)
                overflow: auto
                header
                    display: flex
                    justify-content: center 
                    align-items: center
                    width: 100%
                    height 50px
                    position fixed
                    background-color: navy 
                    box-sizing: border-box
                    border-bottom: 4px solid #429bf4
                    font-family: 'Roboto'
                    font-weight: 800
                    font-style: normal
                    font-stretch: normal
                    letter-spacing: normal
                    text-align: left
                    color: white
                .targetGrid
                    margin-top: 50px
                    width: 100%
                    height: 100%